@model GFT_Tickets.Models.GeneroMusical

<h2>Cadastrar Gênero Musical</h2>

<form class="form-horizontal" asp-controller="GeneroMusical" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    
    <label asp-for="Nome" class="mt-4">Nome</label>
    <input type="text" asp-for="Nome" class="form-control mb-2" placeholder="Nome do Gênero Musical">
    <span asp-validation-for="Nome"></span>

    <button class="btn btn-success mt-4">Cadastrar</button>
</form>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
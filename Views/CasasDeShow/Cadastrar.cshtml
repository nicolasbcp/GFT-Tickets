@model GFT_Tickets.Models.CasaDeShow

<h2>Cadastrar Casa de Show</h2>

<form class="form-horizontal" asp-controller="CasasDeShow" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome" class="mt-4">Nome</label>
    <input type="text" asp-for="Nome" class="form-control mb-2" placeholder="Nome da Casa de Show">
    <span asp-validation-for="Nome"></span>
    <label asp-for="Endereco">Endereço</label>
    <input type="text" asp-for="Endereco" class="form-control" placeholder="Endereço">
    <span asp-validation-for="Endereco"></span>
    <button class="btn btn-success mt-4">Cadastrar</button>
</form>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}